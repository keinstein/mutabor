 .travis.yml | 16 ++++++++++++++--
 1 file changed, 14 insertions(+), 2 deletions(-)

diff --git a/.travis.yml b/.travis.yml
index 67731461..d555fa54 100644
--- a/.travis.yml
+++ b/.travis.yml
@@ -6,6 +6,18 @@ services:
 
 script:
     - wget -O- http://travis.debian.net/script.sh | sh -
+    - ls ..
 
-if:
-  tag IS blank
+deploy:
+- provider: releases
+  api_key:
+    secure: 
+  skip_cleanup: true
+  file_glob: true
+  file:
+    - ../*.deb
+    - ../*.dsc
+    - ../*.changes
+  on:
+    repo: keinstein/mutabor
+    tags: true
