    U_10 = [ @, @, @, @, @, @, @, @, @, @, @+Delta, @]  
    U_11 = [ @, @, @, @, @, @, @, @, @, @, @, @+Delta]  
 
    Up(dist) = dist
    {
        0 -> U__0  
     	1 -> U__1  
     	2 -> U__2
     	3 -> U__3
     	4 -> U__4
     	5 -> U__5
     	6 -> U__6
     	7 -> U__7
     	8 -> U__8
    	9 -> U__9
    	10 -> U_10
    	11 -> U_11
    }

    D__0 = [ @-Delta, @, @, @, @, @, @, @, @, @, @, @]  
